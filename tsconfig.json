{
  "compilerOptions": {
    "target": "es2019",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "dist/type",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // Ecstar-nexr
      "ecstar": ["node_modules/ecstar/src"],
      "ecstar/*": [
        "node_modules/ecstar/src/lib/*",
        "node_modules/ecstar/src/lib/structures/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "node_modules/ecstar/src/**/*.ts"]
}
